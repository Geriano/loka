# Performance Tuning
LOKA_MAX_CONNECTIONS=1000
LOKA_WORKER_THREADS=8
LOKA_METRICS_INTERVAL=5

# Security Configuration
LOKA_RATE_LIMIT=100
LOKA_ENABLE_CORS=true
LOKA_LOG_LEVEL=info