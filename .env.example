# Loka Stratum Environment Configuration Example
# Copy this file to .env and configure for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgres://loka:secure_password@postgres:5432/loka
POSTGRES_USER=loka
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=loka
POSTGRES_PORT=5432

# =============================================================================
# MINING POOL CONFIGURATION
# =============================================================================
POOL_ADDRESS=stratum.pool.com
POOL_PORT=4444
POOL_USERNAME=your_btc_address_here
POOL_PASSWORD=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
STRATUM_PORT=3333
METRICS_PORT=9090
MAX_CONNECTIONS=1000
WORKER_THREADS=

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================
RUST_LOG=info
RUST_BACKTRACE=0
ENV=production

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=secure_grafana_password
ALERTMANAGER_PORT=9093

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SENTRY_DSN=
REDIS_PASSWORD=
TLS_CERT_PATH=
TLS_KEY_PATH=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=600
REDIS_URL=redis://redis:6379

# =============================================================================
# CI/CD CONFIGURATION (for development)
# =============================================================================
# Set to "true" to enable additional debugging in development
CI_DEBUG=false
ENABLE_BENCHMARKS=false
SKIP_MIGRATION=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
VERSION=latest
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# ADDITIONAL SERVICE CONFIGURATION
# =============================================================================
# Nginx
NGINX_CLIENT_MAX_BODY_SIZE=1m

# Resource limits (for Docker Compose)
STRATUM_MEMORY_LIMIT=2g
STRATUM_CPU_LIMIT=2.0
POSTGRES_MEMORY_LIMIT=1g
POSTGRES_CPU_LIMIT=0.5